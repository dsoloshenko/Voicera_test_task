  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add new meeting:</h4>
      </div>
      <div class="modal-body">
        <div class="panel-body">
            <form>
             <div class="col-lg-6 pull-left">
              <div class="form-group">
                <label for="title" class="control-label">
                  Title :
                </label>
                <input id="meeting-title" name="title" class = "form-control" type="text" value=<%= title %> />
              </div>
              <div class="form-group">
                <label for="organizer-email" class="control-label">
                  Organizer email : </label>
                <input id="organizer-email" name="organizer_email" class= "form-control" type="text" value=<%= organizer_email %> />
              </div>

            <div class="form-group mb20 mt20">
               <label for="start_time" class="control-label">
                 Start time:
                </label>
                <div class='input-group date' id='start_time'>
                    <input type='text' class="form-control"" name="start_time" value=<%= start_time %> />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>


    </div>
              <div class="form-group col-lg-6 pull-right">
                <label for="meeting-highlights" class="control-label">
                  Meeting highlights : </label>
                  <textarea class="form-control" name="highlight_text" rows="5" id="meeting-highlights" placeholder="Devide highlights options by ';' sign."><%= _.pluck(meeting_highlights, 'highlight_text').join(';') %>
                  </textarea>
                          <div class="form-group mb20 mt15">
                             <label for="end_time" class="control-label">
                                End time:
                              </label>
                              <div class='input-group date' id='end_time'>
                                  <input type='text' class="form-control"" name="end_time" value=<%= end_time %> />
                                  <span class="input-group-addon">
                                      <span class="glyphicon glyphicon-calendar"></span>
                                  </span>
                              </div>
                          </div>

              </div>



      <div class="modal-footer" style="background-color: white; display: inline-block; width: 90%;">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      <button class="btn js-meeting-submit">Save</button>

                  </div>
                  </form>

              </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->


<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>